<Window x:Class="Charm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Charm"
        mc:Ignorable="d"
        Loaded="OnControlLoaded"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="#3d3d3d" Foreground="#FFE6E6E6">
            <MenuItem Header="Settings" Background="#3d3d3d" Foreground="#FFE6E6E6">
                <MenuItem Header="Open config panel" Background="#3d3d3d" Foreground="#FFE6E6E6" Click="OpenConfigPanel_OnClick"/>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1" x:Name="MainTabControl" Background="#3d3d3d" Foreground="#FFE6E6E6">
            <TabItem Header="Main Menu" x:Name="MainMenuTab">
                <local:MainMenuView/>
            </TabItem>
        </TabControl>
        <local:ProgressView x:Name="ProgressView" Grid.Row="0" Grid.RowSpan="2" Height="1080" Width="1920"/>
    </Grid>
</Window>