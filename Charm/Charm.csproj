      <PackageReference Include="NAudio.Vorbis" Version="1.5.0" />
      <PackageReference Include="Serilog" Version="2.11.1-dev-01397" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Field\Field.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\..\Hadronic\Symmetry\bin\release\net6.0\win-x64\native\Symmetry.dll">
        <Link>Symmetry.dll</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <Page Update="ConfigSettingControl.xaml">
        <Generator>MSBuild:Compile</Generator>
        <DependentUpon>ConfigView.xaml</DependentUpon>
      </Page>
    </ItemGroup>

</Project>
