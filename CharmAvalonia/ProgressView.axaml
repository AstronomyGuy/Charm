<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CharmAvalonia.ProgressView">
    <Grid Width="1920" Height="1080" x:Name="Grid" Background="Transparent">
        <!-- So we stop clicking on the main screen, need HitTestVisible -->
        <Rectangle IsHitTestVisible="True" Fill="{StaticResource SystemChromeBlackHighColor}" Opacity="0.5"/>
        <StackPanel Orientation="Vertical" Height="105" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource SystemChromeBlackHighColor}">
            <ProgressBar x:Name="ProgressBar" Height="50" Value="50" Background="{StaticResource SystemChromeDisabledLowColor}" Foreground="DodgerBlue"/>
            <Viewbox Height="50" Width="450">
                <TextBlock x:Name="ProgressText" Text="LOADING" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Viewbox>
        </StackPanel>
    </Grid>
</UserControl>

